<div class="container">
  <div class="cards" id="card-resto">
    <h1> <%= @restaurant.name %></h1>
    <p> 🍽 <%= @restaurant.category%></p>
    <p> 🏢: <%= @restaurant.address %></p>
    <p> 📞: <%= @restaurant.phone_number %></p>

    <%= link_to 'All restaurants', restaurants_path, class: "btn-link" %>
  </div>

  <div class="cards">
    <h1> Reviews</h1>

  <ol class="list-group list-group-numbered">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <%= review.content%>
      </div>
      <span class="badge bg-light rounded-pill"><%= "⭐️"*review.rating %></span>
    </li>
    <% end %>
  </ol>
  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn-blue" %>
  </div>
</div>
